{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots" : ["./node_modules/@types", "./types"],
    "resolveJsonModule": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "build.ts"
  ],
  "compileOnSave": true
}
